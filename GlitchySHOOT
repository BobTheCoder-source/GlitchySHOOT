<!DOCTYPE html><html lang="en"><head><meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0"><title>Sniper Game</title><style>*{margin:0;padding:0;box-sizing:border-box;}body{display:flex;justify-content:center;align-items:center;height:100vh;background-color:#333;}#game-container{position:relative;}#gameCanvas{border:2px solid white;background-color:#555;}</style></head><body><div id="game-container"><canvas id="gameCanvas" width="800" height="600"></canvas></div><script>const canvas=document.getElementById("gameCanvas");const ctx=canvas.getContext("2d");let targets=[];let shotTargets=0;function createTarget(){const target={x:Math.random()*(canvas.width-50),y:Math.random()*(canvas.height-50),width:40,height:40,color:"red",dx:(Math.random()*2-1)*2,dy:(Math.random()*2-1)*2};targets.push(target);}function drawTargets(){targets.forEach(target=>{ctx.fillStyle=target.color;ctx.fillRect(target.x,target.y,target.width,target.height);});}canvas.addEventListener("mousemove",event=>{const mouseX=event.offsetX;const mouseY=event.offsetY;ctx.clearRect(0,0,canvas.width,canvas.height);drawTargets();ctx.strokeStyle="white";ctx.strokeRect(mouseX-20,mouseY-20,40,40);});canvas.addEventListener("click",event=>{const mouseX=event.offsetX;const mouseY=event.offsetY;targets=targets.filter(target=>{if(mouseX>=target.x&&mouseX<=target.x+target.width&&mouseY>=target.y&&mouseY<=target.y+target.height){shotTargets++;return false;}return true;});});function gameLoop(){if(targets.length<5){createTarget();}targets.forEach(target=>{target.x+=target.dx;target.y+=target.dy;if(target.x<0||target.x>canvas.width-target.width)target.dx*=-1;if(target.y<0||target.y>canvas.height-target.height)target.dy*=-1;});drawTargets();ctx.fillStyle="white";ctx.font="20px Arial";ctx.fillText("Shot Targets: "+shotTargets,10,30);requestAnimationFrame(gameLoop);}gameLoop();</script></body></html>
